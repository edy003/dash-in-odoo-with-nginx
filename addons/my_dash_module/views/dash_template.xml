<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="dash_template">
        <t t-call="website.layout">
            <t t-set="page_title">Dashboard</t>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h2 class="text-center">Tableau de bord Odoo-Dash</h2>
                            </div>
                            <div class="card-body p-0">
                                <!-- Chargement de l'application Dash directement via URL -->
                                <iframe src="http://127.0.0.1:8050" 
                                        id="dash-iframe"
                                        width="100%" 
                                        height="800px" 
                                        style="border:none;"></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>